<!-- clientdashboard.ejs -->
<%- include('_header') %>
<div class="container mt-5">
  <h1 class="mb-4">Welcome, <%= user.name %></h1>
  <% if (successMessage) { %>
  <div class="alert alert-success" role="alert"><%= successMessage %></div>
  <% } %>
  <div class="row">
    <!-- Left Column -->
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Profile</h5>
          <p class="card-text">Email: <%= user.email %></p>
          <a href="/client/edit-profile" class="btn btn-primary btn-sm"
            >Edit Profile</a
          >
        </div>
      </div>
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Post a New Job</h5>
          <a href="/job/create" class="btn btn-success btn-sm">Create Job</a>
        </div>
      </div>
    </div>
    <!-- Right Column -->
    <div class="col-md-8">
      <!-- Active Jobs Section -->
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Active Jobs</h5>
          <% if (activeJobs && activeJobs.length > 0) { %> <%
          activeJobs.forEach(function(job) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h6 class="card-title d-flex justify-content-between">
                <%= job.title %>
                <span
                  class="badge <%= job.status === 'open' ? 'bg-primary' : 'bg-info' %>"
                >
                  <%= job.status === 'open' ? 'Open' : 'In Progress' %>
                </span>
              </h6>
              <p class="card-text"><small>Budget: $<%= job.budget %></small></p>
              <!-- Work Submissions Section -->
              <% if (job.submissions && job.submissions.length > 0) { %>
              <div class="mt-3">
                <h6>Work Submissions</h6>
                <% job.submissions.forEach(function(submission) { %>
                <div class="card mb-2">
                  <div class="card-body">
                    <h6 class="card-subtitle mb-2">
                      Submitted by <%= submission.freelancer_name %>
                      <span
                        class="badge <%= submission.status === 'pending' ? 'bg-warning' : submission.status === 'approved' ? 'bg-success' : submission.status === 'revision' ? 'bg-info' : 'bg-secondary' %>"
                      >
                        <%= submission.status %>
                      </span>
                    </h6>
                    <p class="card-text"><%= submission.description %></p>
                    <% if (submission.files) { %>
                    <div class="mb-2">
                      <% submission.files.forEach(function(file) { %>
                      <a
                        href="<%= file.url %>"
                        class="btn btn-outline-secondary btn-sm me-2"
                        target="_blank"
                      >
                        View <%= file.name %>
                      </a>
                      <% }); %>
                    </div>
                    <% } %> <% if (submission.status === 'pending') { %>
                    <div class="btn-group">
                      <form
                        action="/submissions/<%= submission.id %>/approve"
                        method="POST"
                        class="me-2"
                      >
                        <button type="submit" class="btn btn-success btn-sm">
                          Approve Work
                        </button>
                      </form>
                      <button
                        type="button"
                        class="btn btn-warning btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#revisionModal<%= submission.id %>"
                      >
                        Request Revision
                      </button>
                    </div>
                    <!-- Revision Request Modal -->
                    <div
                      class="modal fade"
                      id="revisionModal<%= submission.id %>"
                      tabindex="-1"
                    >
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title">Request Revision</h5>
                            <button
                              type="button"
                              class="btn-close"
                              data-bs-dismiss="modal"
                            ></button>
                          </div>
                          <form
                            action="/submissions/<%= submission.id %>/revision"
                            method="POST"
                          >
                            <div class="modal-body">
                              <div class="form-group">
                                <label>Revision Details</label>
                                <textarea
                                  name="revision_notes"
                                  class="form-control"
                                  required
                                ></textarea>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                              >
                                Cancel
                              </button>
                              <button type="submit" class="btn btn-primary">
                                Submit Request
                              </button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                    <% } %>
                  </div>
                </div>
                <% }); %>
              </div>
              <% } %>
              <!-- Bids Section -->
              <div class="mt-3">
                <h6>Bids (<%= job.bids.length %>)</h6>
                <% if (job.bids.length > 0) { %> <%
                job.bids.forEach(function(bid) { %>
                <!-- Existing bid display code remains the same -->
                <% }); %> <% } else { %>
                <p class="text-muted">No bids yet</p>
                <% } %>
              </div>
            </div>
          </div>
          <% }); %> <% } else { %>
          <p class="text-muted">No active jobs</p>
          <% } %>
        </div>
      </div>
      <!-- Completed Jobs Section -->
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Completed Jobs</h5>
          <% if (completedJobs && completedJobs.length > 0) { %> <%
          completedJobs.forEach(function(job) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h6 class="card-title d-flex justify-content-between">
                <%= job.title %>
                <span
                  class="badge <%= job.payment_status === 'pending' ? 'bg-warning' : job.payment_status === 'paid' ? 'bg-success' : 'bg-secondary' %>"
                >
                  <%= job.payment_status === 'pending' ? 'Payment Pending' :
                  'Paid' %>
                </span>
              </h6>
              <p class="mb-1">Budget: $<%= job.budget %></p>
              <p class="mb-2">
                <small class="text-muted"
                  >Completed on: <%= new
                  Date(job.updated_at).toLocaleDateString() %></small
                >
              </p>
              <% if (job.payment_status === 'pending') { %>
              <form action="/jobs/<%= job.id %>/pay" method="POST">
                <button type="submit" class="btn btn-primary btn-sm">
                  Process Payment
                </button>
              </form>
              <% } %>
            </div>
          </div>
          <% }); %> <% } else { %>
          <p class="text-muted">No completed jobs</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('_footer') %>
