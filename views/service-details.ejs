<!-- views/services/details.ejs -->
<%- include('_header') %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <% if (service.image_path) { %>
      <img
        src="<%= service.image_path %>"
        class="img-fluid rounded"
        alt="<%= service.title %>"
      />
      <% } else { %>
      <div
        class="bg-secondary text-white d-flex align-items-center justify-content-center rounded"
        style="height: 400px"
      >
        <i class="bi bi-image fs-1"></i>
      </div>
      <% } %>
    </div>
    <div class="col-md-6">
      <h1><%= service.title %></h1>
      <p class="text-muted">Offered by <%= service.seller_name %></p>
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Description</h5>
          <p class="card-text"><%= service.description %></p>

          <h5 class="card-title mt-4">Price</h5>
          <p class="card-text fs-4">KES <%= service.price %></p>

          <% if (user && user.id !== service.seller_id) { %>
          <form action="/services/<%= service.id %>/purchase" method="POST">
            <button type="submit" class="btn btn-primary btn-lg w-100">
              Purchase Service
            </button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('_footer') %>
