<!-- views/services/list.ejs -->
<%- include('_header') %>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Available Services</h1>
    <% if (user) { %>
    <a href="/services/create" class="btn btn-primary">Create New Service</a>
    <% } %>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% services.forEach(service => { %>
    <div class="col">
      <div class="card h-100">
        <% if (service.image_path) { %>
        <img
          src="<%= service.image_path %>"
          class="card-img-top"
          alt="<%= service.title %>"
        />
        <% } else { %>
        <div
          class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center"
          style="height: 200px"
        >
          <i class="bi bi-image fs-1"></i>
        </div>
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= service.title %></h5>
          <p class="card-text">
            <%= service.description.substring(0, 100) %>...
          </p>
          <p class="card-text">
            <strong>Price:</strong> KES <%= service.price %>
          </p>
          <p class="card-text">
            <small class="text-muted">By <%= service.seller_name %></small>
          </p>
        </div>
        <div class="card-footer">
          <a href="/services/<%= service.id %>" class="btn btn-primary w-100"
            >View Details</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include('_footer') %>
