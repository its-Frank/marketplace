<!-- freedashboard.ejs -->
<%- include('_header') %>
<div class="container mt-5">
  <h1 class="mb-4">Welcome, <%= user.name %></h1>
  <% if (successMessage) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= successMessage %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
  <div class="row">
    <!-- Left Column -->
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Profile</h5>
          <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
          <p class="card-text">
            <strong>Skills:</strong> <%= user.skills || 'Not specified' %>
          </p>
          <p class="card-text">
            <strong>Location:</strong> <%= user.location || 'Not specified' %>
          </p>
          <p class="card-text">
            <strong>Bio:</strong> <%= user.bio || 'No bio added yet' %>
          </p>
          <a href="/edit-profile" class="btn btn-primary btn-sm"
            >Edit Profile</a
          >
        </div>
      </div>
    </div>
    <!-- Right Column -->
    <div class="col-md-8">
      <!-- Active Bids Section -->
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Active Bids</h5>
          <ul class="list-group list-group-flush">
            <% activeBids.forEach(function(bid) { %>
            <li
              class="list-group-item d-flex justify-content-between align-items-center"
            >
              <%= bid.job_title %>
              <span class="badge bg-primary rounded-pill"
                >$<%= bid.amount %></span
              >
            </li>
            <% }); %> <% if (activeBids.length === 0) { %>
            <li class="list-group-item">No active bids</li>
            <% } %>
          </ul>
        </div>
      </div>
      <!-- Ongoing Jobs Section -->
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Ongoing Jobs</h5>
          <% if (ongoingJobs && ongoingJobs.length > 0) { %> <%
          ongoingJobs.forEach(function(job) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h6 class="card-title d-flex justify-content-between">
                <%= job.title %>
                <span class="badge bg-info">In Progress</span>
              </h6>
              <!-- Work Submission Section -->
              <% if (job.current_submission) { %>
              <div class="mt-2">
                <p class="mb-2">
                  Current Submission Status:
                  <span
                    class="badge <%= job.current_submission.status === 'pending' ? 'bg-warning' : job.current_submission.status === 'revision' ? 'bg-info' : 'bg-secondary' %>"
                  >
                    <%= job.current_submission.status %>
                  </span>
                </p>
                <% if (job.current_submission.status === 'revision') { %>
                <div class="alert alert-info">
                  <strong>Revision Request:</strong>
                  <p><%= job.current_submission.revision_notes %></p>
                </div>
                <% } %>
              </div>
              <% } %>
              <!-- Submit Work Button/Form -->
              <button
                type="button"
                class="btn btn-primary btn-sm mt-2"
                data-bs-toggle="modal"
                data-bs-target="#submitWorkModal<%= job.id %>"
              >
                Submit Work
              </button>
              <!-- Submit Work Modal -->
              <div
                class="modal fade"
                id="submitWorkModal<%= job.id %>"
                tabindex="-1"
              >
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Submit Work</h5>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                      ></button>
                    </div>
                    <form
                      action="/jobs/<%= job.id %>/submit"
                      method="POST"
                      enctype="multipart/form-data"
                    >
                      <div class="modal-body">
                        <div class="form-group mb-3">
                          <label>Description</label>
                          <textarea
                            name="description"
                            class="form-control"
                            required
                          ></textarea>
                        </div>
                        <div class="form-group">
                          <label>Files</label>
                          <input
                            type="file"
                            name="files"
                            multiple
                            class="form-control"
                          />
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button
                          type="button"
                          class="btn btn-secondary"
                          data-bs-dismiss="modal"
                        >
                          Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">
                          Submit Work
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }); %> <% } else { %>
          <p class="text-muted">No ongoing jobs</p>
          <% } %>
        </div>
      </div>
      <!-- Completed Jobs Section -->
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Completed Jobs</h5>
          <% if (completedJobs && completedJobs.length > 0) { %> <%
          completedJobs.forEach(function(job) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h6 class="card-title d-flex justify-content-between">
                <%= job.title %>
                <span
                  class="badge <%= job.payment_status === 'pending' ? 'bg-warning' : job.payment_status === 'paid' ? 'bg-success' : 'bg-secondary' %>"
                >
                  <%= job.payment_status %>
                </span>
              </h6>
              <p class="mb-1">Payment Amount: $<%= job.payment_amount %></p>
              <small class="text-muted"
                >Completed on: <%= new
                Date(job.completion_date).toLocaleDateString() %></small
              >
            </div>
          </div>
          <% }); %> <% } else { %>
          <p class="text-muted">No completed jobs</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('_footer') %>
