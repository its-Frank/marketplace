<%- include('_header') %>
<div class="container mt-5">
  <h1 class="mb-4">Job Management</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Client</th>
        <th>Status</th>
        <th>Budget</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% jobs.forEach(job => { %>
      <tr>
        <td><%= job.id %></td>
        <td><%= job.title %></td>
        <td><%= job.client_name %></td>
        <td><%= job.status %></td>
        <td>$<%= job.budget %></td>
        <td>
          <form
            action="/admin/jobs/delete/<%= job.id %>"
            method="POST"
            class="d-inline"
            onsubmit="return confirm('Are you sure you want to delete this job?');"
          >
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
<%- include('_footer') %>
