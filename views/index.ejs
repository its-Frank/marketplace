    <!-- Contact Section -->
    <section
      class="contact_section layout_padding py-5"
      id="contactLink"
      style="background-color: #05264a"
    >
      <div class="container">
        <div class="heading_container text-center mb-4">
          <h2 class="text-white">Contact Kenyan Freelancer Marketplace</h2>
          <p class="text-white-50">
            We'd love to hear from you. Send us a message and we'll get back to
            you soon.
          </p>
        </div>
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <form action="/contact" method="POST">
              <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                  <label for="inputName4" class="text-white">Full Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputName4"
                    name="name"
                    placeholder="Enter your full name"
                    required
                  />
                </div>
                <div class="form-group col-md-6 mb-3">
                  <label for="inputEmail4" class="text-white"
                    >Email Address</label
                  >
                  <input
                    type="email"
                    class="form-control"
                    id="inputEmail4"
                    name="email"
                    placeholder="Enter your email"
                    required
                  />
                </div>
              </div>
              <div class="form-group mb-3">
                <label for="inputSubject4" class="text-white">Subject</label>
                <input
                  type="text"
                  class="form-control"
                  id="inputSubject4"
                  name="subject"
                  placeholder="Enter message subject"
                  required
                />
              </div>
              <div class="form-group mb-3">
                <label for="inputMessage" class="text-white"
                  >Your Message</label
                >
                <textarea
                  class="form-control"
                  id="inputMessage"
                  name="message"
                  placeholder="Write your message here"
                  rows="5"
                  required
                ></textarea>
              </div>
              <div class="row mb-3">
                <div class="col-md-6">
                  <label for="inputPhone" class="text-white"
                    >Phone Number
                  </label>
                  <input
                    type="tel"
                    class="form-control"
                    id="inputPhone"
                    name="phone"
                    placeholder="Enter your phone number"
                  />
                </div>
                <div class="col-md-6">
                  <label for="inputCategory" class="text-white"
                    >Inquiry Type</label
                  >
                  <select
                    class="form-control"
                    id="inputCategory"
                    name="category"
                  >
                    <option>General Inquiry</option>
                    <option>Support</option>
                    <option>Freelancer Help</option>
                    <option>Client Assistance</option>
                    <option>Other</option>
                  </select>
                </div>
              </div>
              <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg">
                  Send Message
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
