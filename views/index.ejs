      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
    <style>
      .hero {
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
      }
      .custom-about-image {
        max-width: 450px;
        height: auto;
      }
      /* Large screens (default) */
      @media (min-width: 992px) {
        .hero {
          height: 100vh;
        }
      }
      /* Medium screens */
      @media (min-width: 768px) and (max-width: 991px) {
        .hero {
          height: 70vh;
        }
      }
      /* Small screens */
      @media (max-width: 767px) {
        .hero {
          height: 50vh;
        }
      }
      /* About section responsive styles */
      .custom-about-image {
        max-width: 100%;
        height: auto;
      }
      /* Large screens */
      @media (min-width: 992px) {
        .custom-about-image {
          max-width: 450px;
        }
      }
      /* Medium screens */
      @media (min-width: 768px) and (max-width: 991px) {
        .custom-about-image {
          max-width: 350px;
        }
      }
      /* Small screens */
      @media (max-width: 767px) {
        .custom-about-image {
          max-width: 280px;
          margin: 0 auto;
          display: block;
        }
      }
      @media (max-width: 767px) {
        .hero .display-4 {
          font-size: 2rem;
        }
        .hero .lead {
          font-size: 1rem;
        }
        .about_section .row {
          margin-top: 2rem;
        }
      }

      .small-image {
        max-width: 150px;
        height: auto;
      }
      .footerabout a {
        text-decoration: none;
      }
    </style>
  </head>
